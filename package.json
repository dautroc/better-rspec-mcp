{
  "name": "better-rspec-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol server providing Better RSpec guidance, examples, and best practices",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "rspec",
    "testing",
    "ruby",
    "rails",
    "better-specs",
    "ai-assistant"
  ],
  "author": "Better RSpec MCP Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "zod": "^3.22.4",
    "gray-matter": "^4.0.3",
    "marked": "^11.1.1",
    "fuse.js": "^7.0.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/better-rspec-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/better-rspec-mcp/issues"
  },
  "homepage": "https://github.com/your-org/better-rspec-mcp#readme"
